@page
@model SportsTournamentApp.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Players</h1>


@if (User.IsInRole("Admin")) {
    <a asp-page="Create">Create New</a>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Player) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.Name)
                </td>
                <td>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> 
                        <a asp-page = "./Delete" asp-route-id="@item.ID">Delete</a> 
                    }
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                 </td>
        </tr>
}
    </tbody>
</table>
