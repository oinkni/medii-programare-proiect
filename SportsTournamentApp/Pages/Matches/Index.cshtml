@page
@model SportsTournamentApp.Pages.Matches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Matches</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].TeamA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].TeamB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].MatchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].Tournament)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Match) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.TeamA.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TeamB.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchDate)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tournament.DisplayName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
