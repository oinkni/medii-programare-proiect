@page
@model SportsTournamentApp.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="p-3 mb-4 bg-light border rounded-3">
    <div class="container-fluid  py-3">
        <h1 class="display-5 fw-bold">
            <strong> @Html.DisplayFor(model => model.Team.Name)</strong>
        </h1>

        <p class="col-md-8 fs-4">
            <dl class=" row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Team.Coach)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Team.Coach)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Team.FoundingDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Team.FoundingDate)
                </dd>
            </dl>
        </p>
        <p class="col-md-8 fs-4">@Html.DisplayFor(model => model.Team.Description)</p>

        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-lg btn-primary" role="button" asp-page="./Edit" asp-route-id="@Model.Team.ID">Edit</a>
        }
    </div>
</div>

<div class="d-flex flex-column flex-md-row flex-wrap mt-4">
    @foreach (var item in Model.Team.Players)
    {
        <div class="col-12 col-md-3 pb-4 pe-3">
            <div class="card">
                <img class="card-img-top" src="~/profile_default.jpg" />
                <div class="card-body">
                    <h5 class="card-title">
                        <strong class="text-primary">@Html.DisplayFor(model => item.FullName)</strong>
                    </h5>

                    <p class="card-text">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => item.Position)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => item.Position)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => item.DateOfBirth)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => item.DateOfBirth)
                            </dd>
                        </dl>
                    </p>
                </div>
            </div>
        </div>
    }
</div>